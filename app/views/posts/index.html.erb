<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>
<% if flash[:alert].present?%>
<%= flash[:alert] %>
<%= link_to 'Back', posts_path %>

<% else %>
<%= render 'category'%>
<table>
  <thead>
    <tr>

      <th colspan="3"></th>
    </tr>
  </thead>
<h1>Posts</h1>

  <tbody>
    <tr>
      <td>Author </td>
      <td>Subject</td>
      <td> Categryy</td>
      <td>Content</td>
    </tr>
    <% @posts.each do |post| %>
    <tr> <% cat = post.category %>
      <td> <%= post.author %> </td>
      <td> <%= post.subject %> </td>
      <td> <%= cat.name %></td>
      <td> <%= post.content %> </td>
    
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
   <% end %>
  </tbody>
</table>
<br>
<% end %>
<%= link_to 'New Post', new_post_path %>
<br>
