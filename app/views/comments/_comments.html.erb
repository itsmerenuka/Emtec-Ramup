<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
    <tr>
     <td> <%= comment.author%> </td>
     <td> <%=comment.content%></td>
   </tr>

    </tr>
      <tr>
      <td> <%= link_to 'Delete', [comment.post, comment],
               :method => :delete,
               data: { confirm: 'Are you sure?' }
                %>  
      </tr>

    <% end %>
  </tbody>
</table>

<br>

