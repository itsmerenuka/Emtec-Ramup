<p id="notice"><%= notice %></p>

<h3>Comments</h3>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
    <tr>
      <td> Comment By <%= comment.author %> </td>
    </tr>
    <tr>
      <td> <%= comment.content %></td>
    </tr>
      <tr>
      <td> Actions </td>
      <td> <%= link_to 'Delete', [comment.post, comment],
               :method => :delete,
               data: { confirm: 'Are you sure?' }
                %>  
      </td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

